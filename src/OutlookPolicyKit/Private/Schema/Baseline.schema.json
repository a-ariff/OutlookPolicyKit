{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.outlookpolicykit.com/baseline.json",
  "title": "Outlook Policy Baseline",
  "description": "Schema for Outlook policy baseline configuration files",
  "type": "object",
  "required": ["id", "displayName", "platform", "settings"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9][a-zA-Z0-9._-]*[a-zA-Z0-9]$",
      "minLength": 2,
      "maxLength": 100,
      "description": "Unique identifier for the baseline"
    },
    "displayName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Human-readable name for the baseline"
    },
    "description": {
      "type": "string",
      "maxLength": 1000,
      "description": "Optional description of the baseline"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.-]+)?$",
      "description": "Semantic version of the baseline"
    },
    "platform": {
      "type": "string",
      "enum": ["Windows", "macOS", "Universal"],
      "description": "Target platform for the baseline"
    },
    "category": {
      "type": "string",
      "enum": ["Security", "Performance", "Compliance", "Custom"],
      "description": "Category classification of the baseline"
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 100
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "organization": {
          "type": "string",
          "maxLength": 100
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "createdDate": {
          "type": "string",
          "format": "date-time"
        },
        "lastModified": {
          "type": "string",
          "format": "date-time"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 50
          },
          "uniqueItems": true
        }
      }
    },
    "settings": {
      "type": "array",
      "minItems": 1,
      "maxItems": 100,
      "description": "Array of policy settings",
      "items": {
        "type": "object",
        "required": ["name", "expectedValue"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "description": "Friendly policy name"
          },
          "path": {
            "type": "string",
            "maxLength": 500,
            "description": "Registry path or plist key path"
          },
          "type": {
            "type": "string",
            "enum": ["DWORD", "String", "Binary", "QWord", "bool", "int", "float", "string"],
            "description": "Data type of the policy value"
          },
          "expectedValue": {
            "oneOf": [
              { "type": "string" },
              { "type": "number" },
              { "type": "boolean" },
              { "type": "null" }
            ],
            "description": "Expected value for the policy setting"
          },
          "scope": {
            "type": "string",
            "enum": ["Machine", "User"],
            "default": "Machine",
            "description": "Scope for Windows registry policies"
          },
          "description": {
            "type": "string",
            "maxLength": 500,
            "description": "Description of what this policy controls"
          },
          "category": {
            "type": "string",
            "maxLength": 50,
            "description": "Policy category for organization"
          },
          "severity": {
            "type": "string",
            "enum": ["Low", "Medium", "High", "Critical"],
            "default": "Medium",
            "description": "Severity level for compliance"
          },
          "remediate": {
            "type": "boolean",
            "default": true,
            "description": "Whether to automatically remediate drift"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
